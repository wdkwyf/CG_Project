<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gc.wuyufei"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="edu.cg.wuyufei.util.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBarTheme" >
        <activity
            android:name="edu.cg.wuyufei.activity.CardBoxActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.cg.wuyufei.activity.CardActivity"
            android:label="@string/title_activity_card" />
        <activity
            android:name="edu.cg.wuyufei.activity.DeleteActivity"
            android:label="@string/title_activity_delete"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="edu.cg.wuyufei.activity.AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="edu.cg.wuyufei.activity.MainActivity"
            android:label="@string/title_activity_cardbox"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="edu.cg.wuyufei.activity.AboutUsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_about_us"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>